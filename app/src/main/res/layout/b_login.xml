<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/mail_small"
    android:fadingEdge="horizontal|vertical"
    android:fadingEdgeLength="22dp"
    android:gravity="center">


    <Button
        android:id="@+id/editloginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="221dp"
        android:text="LOGIN"
        android:textColor="@color/orange"
        android:textColorHint="@android:color/black" />

    <ImageView
        android:id="@+id/grayBackground"
        android:layout_width="237dp"
        android:layout_height="170dp"
        android:layout_above="@+id/editloginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-221dp"
        android:alpha="0.7"
        android:baseline="@android:dimen/app_icon_size"
        android:fadingEdge="horizontal|vertical"
        android:paddingBottom="5dp"
        android:src="@color/grey" />

    <EditText
        android:id="@+id/login_input"
        android:layout_width="wrap_content"
        android:layout_height="39dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/login_input"
        android:layout_marginTop="58dp"
        android:text="Username:"
        android:textColor="@color/orange"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_input"
        android:layout_alignStart="@+id/login_input"
        android:layout_marginBottom="-170dp"
        android:text="Password:"
        android:textColor="@color/orange"
        android:textSize="20sp" />


</RelativeLayout>

